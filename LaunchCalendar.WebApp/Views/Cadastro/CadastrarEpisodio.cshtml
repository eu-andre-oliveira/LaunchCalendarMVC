@model LaunchCalendar.Application.UseCases.CadastrarEpisodios.CadastrarEpisodioInput

@{
    ViewData["Title"] = "Cadastrar Episódio";
    var seriesList = ViewBag.SeriesList as IEnumerable<LaunchCalendar.Application.Queries.Series.SerieQueryOutput>;
}

<h2 class="text-center mb-4">Cadastrar Episódio</h2>

<div class="centered-form-wrapper">
    <div class="form-container">
        <form asp-action="CadastrarEpisodio" method="post">
            <div class="form-group">
                <label asp-for="Titulo">Nome do Episódio</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero">Número</label>
                <input asp-for="Numero" class="form-control" type="number" min="1" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temporada">Temporada</label>
                <input asp-for="Temporada" class="form-control" type="number" min="1" />
                <span asp-validation-for="Temporada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerieId">Série</label>
                <select asp-for="SerieId" class="form-control">
                    <option value="">Selecione uma série</option>
                    @if (seriesList != null)
                    {
                        foreach (var serie in seriesList)
                        {
                            <option value="@serie.SerieId">@serie.Titulo</option>
                        }
                    }
                </select>
                <span asp-validation-for="SerieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLancamento">Data de Lançamento</label>
                <input asp-for="DataLancamento" class="form-control" type="date" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemExibicao">Imagem (URL)</label>
                <input asp-for="ImagemExibicao" class="form-control" />
                <span asp-validation-for="ImagemExibicao" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}