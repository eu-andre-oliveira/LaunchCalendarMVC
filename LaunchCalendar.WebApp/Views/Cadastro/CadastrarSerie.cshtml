@model LaunchCalendar.Application.UseCases.CadastrarSerie.CadastrarSerieInput

@{
    ViewData["Title"] = "Cadastrar Série";
}

<h2 class="text-center mb-4">Cadastrar Série</h2>

<div class="centered-form-wrapper">
    <div class="form-container">
        <form asp-action="CadastrarSerie" method="post">
            <div class="form-group">
                <label asp-for="Titulo"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdeTemporadas"></label>
                <input asp-for="QtdeTemporadas" class="form-control" type="number" min="1" />
                <span asp-validation-for="QtdeTemporadas" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}