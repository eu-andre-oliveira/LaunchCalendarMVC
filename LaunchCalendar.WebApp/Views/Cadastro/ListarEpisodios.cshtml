@model IEnumerable<LaunchCalendar.Application.Queries.Episodios.EpisodiosQueryOutput>

@{
    ViewData["Title"] = "Listagem de Episódios";
}

<div class="calendar-container" style="max-width:900px; margin:0 auto; padding:24px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Listagem de Episódios</h2>
        <a href="/Cadastro/CadastrarEpisodio" class="btn btn-primary">Novo Episódio</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Série</th>
                <th>Temporada</th>
                <th>Nº</th>
                <th>Data Lançamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("DetalharEpisodio", new { id = e.EpisodioId })">@e.Titulo</a>
                    </td>
                    <td>@e.SerieTitulo</td>
                    <td>@e.Temporada</td>
                    <td>@e.Numero</td>
                    <td>@e.DataLancamento.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="@Url.Action("DetalharEpisodio", new { id = e.EpisodioId })" class="btn btn-sm btn-info">Ver Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
