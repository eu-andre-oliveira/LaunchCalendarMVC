@model LaunchCalendar.Application.Queries.Episodios.EpisodiosQueryOutput

@{
    ViewData["Title"] = "Detalhes do Episódio";
    var hasImage = !string.IsNullOrWhiteSpace(Model.ImagemExibicao);
}

<div class="calendar-container" style="max-width:800px; margin:0 auto; padding:24px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Detalhes do Episódio</h2>
        <a href="@Url.Action("ListarEpisodios")" class="btn btn-secondary">Voltar</a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (hasImage)
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImagemExibicao" alt="@Model.Titulo" class="img-fluid rounded" style="max-height: 400px; object-fit: cover;" />
                </div>
            }

            <div class="row mb-3">
                <div class="col-md-12">
                    <h3 class="text-primary">@Model.Titulo</h3>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Série:</strong>
                    @if (Model.SerieId > 0)
                    {
                        <a href="@Url.Action("DetalharSerie", new { id = Model.SerieId })">@Model.SerieTitulo</a>
                    }
                    else
                    {
                        <span>@Model.SerieTitulo</span>
                    }
                </div>
                <div class="col-md-6">
                    <strong>Data de Lançamento:</strong> @Model.DataLancamento.ToString("dd/MM/yyyy")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Temporada:</strong> @Model.Temporada
                </div>
                <div class="col-md-6">
                    <strong>Episódio:</strong> @Model.Numero
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Descricao))
            {
                <div class="row mb-3">
                    <div class="col-md-12">
                        <strong>Descrição:</strong>
                        <p class="mt-2">@Model.Descricao</p>
                    </div>
                </div>
            }

            @if (hasImage)
            {
                <div class="row mb-3">
                    <div class="col-md-12">
                        <strong>URL da Imagem:</strong>
                        <p class="mt-1"><small class="text-muted">@Model.ImagemExibicao</small></p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a href="@Url.Action("DetalharSerie", new { id = Model.SerieId })" class="btn btn-info">Ver Série</a>
        <a href="@Url.Action("CalendarioSemanal", new { start = Model.DataLancamento.ToString("yyyy-MM-dd") })" class="btn btn-outline-primary">Ver no Calendário</a>
    </div>
</div>