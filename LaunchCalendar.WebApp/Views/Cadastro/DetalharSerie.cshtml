@model LaunchCalendar.Application.Queries.Series.SerieDetailQueryOutput

@{
    ViewData["Title"] = "Detalhe da Série";
}

<div class="calendar-container" style="max-width:1000px; margin: 24px auto; padding: 16px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">@Model.Titulo</h2>
            <div class="text-muted">@Model.Genero &middot; @Model.QtdeTemporadas temporada(s)</div>
        </div>

        <div class="d-flex gap-2">
            <a href="/Cadastro/CadastrarEpisodio?serieId=@Model.SerieId" class="btn btn-outline-primary">Novo Episódio</a>
            <a href="/Cadastro/ListarSeries" class="btn btn-light">Voltar</a>
        </div>
    </div>

    <section class="mb-4">
        <h4 class="mb-3">Episódios</h4>

        @if (Model.Episodios != null && Model.Episodios.Any())
        {
            <div class="row gx-3 gy-3">
                @foreach (var ep in Model.Episodios.OrderBy(e => e.DataLancamento))
                {
                    var hasImage = !string.IsNullOrWhiteSpace(ep.ImagemExibicao);
                    <div class="col-12">
                        <a href="@Url.Action("DetalharEpisodio", new { id = ep.EpisodioId })" class="item-card @(hasImage ? "" : "no-image")" style="text-decoration: none; color: inherit; display: flex; cursor: pointer;">
                            <div class="item-card-body">
                                <div class="time">@ep.DataLancamento.ToString("dd/MM/yyyy HH:mm")</div>
                                <div class="title">@ep.Titulo</div>
                                <div class="subtitle">Temporada @ep.Temporada · Ep. @ep.Numero</div>
                            </div>
                            @if (hasImage)
                            {
                                <div class="item-image">
                                    <img src="@ep.ImagemExibicao" alt="@ep.Titulo" />
                                </div>
                            }
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-secondary">Nenhum episódio cadastrado para esta série.</div>
        }
    </section>
</div>