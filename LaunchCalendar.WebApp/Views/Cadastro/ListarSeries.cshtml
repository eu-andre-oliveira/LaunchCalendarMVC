@model IEnumerable<LaunchCalendar.Application.Queries.Series.SerieQueryOutput>

@{
    ViewData["Title"] = "Listagem de Séries";
}

<div class="calendar-container" style="max-width:900px; margin:0 auto; padding:24px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Listagem de Séries</h2>
        <a href="/Cadastro/CadastrarSerie" class="btn btn-primary">Novo Série</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Gênero</th>
                <th>Temporadas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Titulo</td>
                    <td>@s.Genero</td>
                    <td>@s.QtdeTemporadas</td>
                </tr>
            }
        </tbody>
    </table>
</div>
