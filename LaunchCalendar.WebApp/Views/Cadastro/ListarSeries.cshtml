@model IEnumerable<LaunchCalendar.Application.Queries.Series.SerieQueryOutput>

@{
    ViewData["Title"] = "Listagem de Séries";
}

<div class="calendar-container" style="max-width: 900px; margin: 0 auto; padding: 32px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Listagem de Séries</h2>
        <a href="/Cadastro/CadastrarSerie" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nova Série
        </a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Gênero</th>
                <th>Qtd. Temporadas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var serie in Model)
            {
                <tr>
                    <td>@serie.Titulo</td>
                    <td>@serie.Genero</td>
                    <td>@serie.QtdeTemporadas</td>
                </tr>
            }
        </tbody>
    </table>
</div>
