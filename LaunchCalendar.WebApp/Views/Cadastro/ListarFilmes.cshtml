@model IEnumerable<LaunchCalendar.Application.Queries.Filmes.FilmeQueryOutput>

@{
    ViewData["Title"] = "Listagem de Filmes";
}

<div class="calendar-container" style="max-width: 900px; margin: 0 auto; padding: 32px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Listagem de Filmes</h2>
        <a href="/Cadastro/CadastrarFilme" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Filme
        </a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Gênero</th>
                <th>Data de Lançamento</th>
                <th>Imagem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var filme in Model)
            {
                <tr>
                    <td>@filme.Titulo</td>
                    <td>@filme.Genero</td>
                    <td>@filme.DataLancamento.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(filme.ImagemExibicao))
                        {
                            <img src="@filme.ImagemExibicao" alt="Imagem do Filme" style="max-width:80px; border-radius:4px;" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
