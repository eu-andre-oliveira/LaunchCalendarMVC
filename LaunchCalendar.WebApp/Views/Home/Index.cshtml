@{
    ViewData["Title"] = "Home";
}

<h2 class="mb-4">Bem-vindo ao LaunchCalendar!</h2>
<p class="home-instructions">Utilize o menu lateral para acessar os cadastros de filmes, séries e episódios.</p>

<div class="calendar-container" style="max-width:1200px; margin: 24px auto; padding: 16px;">
    <h3 class="mb-3">Calendário Semanal</h3>

    <div style="width:100%; height:640px;">
        <iframe
            src="@Url.Action("CalendarioSemanal", "Cadastro", new { embed = true })"
            title="Calendário Semanal"
            style="width:100%; height:100%; border:0; border-radius:8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
            loading="lazy"
        ></iframe>
    </div>
</div>